	                      <!-- Form Edit Part -->
<!-- ================================================================== -->

	<div id="mainContainer" class="container">
		<h1>
			Edit Blog Form
		</h1>
		<form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
		
			<div  class="mt-5">
				<input id="input_title"  class="border-2 border-dark" type="text" name="Title"  value="<%=blog.title%>">
			</div>
			
			<div  class="mt-3 ">
				<input id="input_image" type="text" class="border-2 border-dark" name="Image"   value="<%=blog.image%>">
			</div>
			
			<div  class="mt-3">
			<input id="input_des" type="text" name="Description" class="border-2 border-dark"  value="<%=blog.body%>">	
			</div>
		
		
			<div class="mt-4">
				
				<input type="submit" placeholder="Update">
			
			</div>
			
		</form>
	
	</div>
